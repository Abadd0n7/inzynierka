@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@Inzynierka.Resources.Strings.Resource.CreateHeader, "Create")
</p>
