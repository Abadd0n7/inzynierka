@using System.Web.Razor.Parser
@model IEnumerable<Inzynierka.Models.ActivityPlan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table
    style="border-width: 0;"
    class="table">
    <tr>
        <th>
            Activity name
        </th>
        <th>
            Date
        </th>
        <th>
            
        </th>
    </tr>

@if ( ViewBag.HasTodayEvents )
{
    <tr>
        <td colspan="3">
            <header>
                @Inzynierka.Resources.Strings.Resource.TodayLabel
            </header>
        </td>
    </tr>
    foreach ( var item in ViewBag.TodayItems )
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Date
            </td>
            <td>
                @Html.ActionLink( "Edit", "Edit", new
           {
               id = item.Id
           } ) |
                @Html.ActionLink( "Details", "Details", new
           {
               id = item.Id 
           } ) |
                @Html.ActionLink( "Delete", "Delete", new
           {
               id = item.Id
           } )
            </td>
        </tr>
    }
}
    

</table>
